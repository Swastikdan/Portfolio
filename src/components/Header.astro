---
import Container from '@components/Container.astro';
import Link from '@components/Link.astro';
import { site } from '@consts';
---

<header>
  <Container>
    <div class='flex flex-wrap justify-between gap-y-2'>
      <Link href='/' underline={false}>

        <div class='font-bold text-xl'>
          {site.name}
        </div>
      </Link>
      <nav class='flex gap-1'>
        <Link href='/projects' class=" animate group relative flex w-fit flex-nowrap rounded-md border-[2px] border-black/15  px-3 text-neutral-700 no-underline transition-colors duration-300 ease-in-out hover:bg-black/5 hover:text-black dark:border-white/20 dark:text-neutral-400 dark:hover:bg-white/5 dark:hover:text-white"> Projects </Link>
      </nav>
    </div>
  </Container>
</header>
