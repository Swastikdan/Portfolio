---
type Props = {
  name: string;
};
const { name } = Astro.props;
---

<div
  class='blend group flex w-fit items-center gap-2 rounded-md border-[2px] border-neutral-200 bg-neutral-100 px-3 py-1 dark:border-neutral-700 dark:bg-neutral-800'>
  <span class='blend text-xs font-medium capitalize text-black dark:text-white'>
    {name}
  </span>
</div>
