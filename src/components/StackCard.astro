---
type Props = {
  name: string;

};
const { name } = Astro.props;
---

<div
  class='w-fit px-3 py-1 group rounded-md border-[2px] flex gap-2 items-center border-neutral-200 dark:border-neutral-700 bg-neutral-100 dark:bg-neutral-800 blend'>
  <span
    class='text-xs font-medium capitalize text-black dark:text-white blend'>
    {name}
  </span>
</div>
