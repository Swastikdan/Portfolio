            }

            if (scrollY >= scrollDistance) {
                navBar.classList.add("bg-white", "dark:bg-gray-900");
            } else {
                navBar.classList.remove("bg-white", "dark:bg-gray-900");
            }

            lastScrollTop = scrollY;
        });
		const sections = document.querySelectorAll('.section');
