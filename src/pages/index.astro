---
import { Image } from "astro:assets";

import Layout from "@/layouts/Layout.astro";
import { site, home, projects, skills, studies, socials } from "@/consts";
import { dateRange } from "@/lib";
---

<Layout title={home.title} description={home.description}>
    <section
        class="w-full max-w-2xl mx-auto py-10 md:py-16 px-4 sm:px-6 lg:px-8"
    >
        <!-- Profile -->
        <div class="flex items-center gap-x-3" aria-label="Profile information">
            <div class="shrink-0">
                <Image
                    src={site.profile_image}
                    alt="Avatar of Swastik Dan"
                    width={16}
                    height={16}
                    loading="eager"
                    class="shrink-0 size-16 rounded-full bg-neutral-500"
                />
            </div>
            <div class="grow">
                <h1 class="text-2xl font-bold text-neutral-200">Swastik Dan</h1>
                <p class="text-sm text-neutral-400">
                    Software Engineer, Web Developer, Minimalist, Eternal
                    Optimist
                </p>
            </div>
        </div>
        <!-- End Profile -->

        <!-- About -->
        <div class="mt-8" aria-labelledby="about-me">
            <h2 id="about-me" class="sr-only">About Me</h2>
            <p class="text-sm text-neutral-300 font-light">
                I like building cool stuff and figuring things out when they
                break. I’m into tough challenges, deep dives, and always
                learning something new.
            </p>
            <p class="mt-3 text-sm text-neutral-300 font-light">
                Currently, I am working on Cloudkaptan with a focus on
                Salesforce, Apex, and providing comprehensive support to our
                users. I am passionate about crafting elegant and functional web
                apps that enhance user experience and deliver real-world value.
            </p>
            <ul class="mt-5 flex flex-col gap-y-3">
                <li class="flex items-center gap-x-2.5">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="32"
                        height="32"
                        class="shrink-0 size-4"
                        aria-hidden="true"
                        fill="#ffffff"
                        viewBox="0 0 256 256"
                        ><path
                            d="M224,48H32a8,8,0,0,0-8,8V192a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V56A8,8,0,0,0,224,48Zm-96,85.15L52.57,64H203.43ZM98.71,128,40,181.81V74.19Zm11.84,10.85,12,11.05a8,8,0,0,0,10.82,0l12-11.05,58,53.15H52.57ZM157.29,128,216,74.18V181.82Z"
                        ></path></svg
                    >
                    <a
                        target="_blank"
                        class="link"
                        href={`mailto:${site.email}`}
                        aria-label={`Email: ${site.email}`}
                    >
                        {site.email}
                    </a>
                </li>
                <li class="flex items-center gap-x-2.5">
                    <svg
                        width="1024"
                        height="1024"
                        viewBox="0 0 1024 1024"
                        fill="none"
                        class="shrink-0 size-4"
                        aria-hidden="true"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            fill-rule="evenodd"
                            clip-rule="evenodd"
                            d="M8 0C3.58 0 0 3.58 0 8C0 11.54 2.29 14.53 5.47 15.59C5.87 15.66 6.02 15.42 6.02 15.21C6.02 15.02 6.01 14.39 6.01 13.72C4 14.09 3.48 13.23 3.32 12.78C3.23 12.55 2.84 11.84 2.5 11.65C2.22 11.5 1.82 11.13 2.49 11.12C3.12 11.11 3.57 11.7 3.72 11.94C4.44 13.15 5.59 12.81 6.05 12.6C6.12 12.08 6.33 11.73 6.56 11.53C4.78 11.33 2.92 10.64 2.92 7.58C2.92 6.71 3.23 5.99 3.74 5.43C3.66 5.23 3.38 4.41 3.82 3.31C3.82 3.31 4.49 3.1 6.02 4.13C6.66 3.95 7.34 3.86 8.02 3.86C8.7 3.86 9.38 3.95 10.02 4.13C11.55 3.09 12.22 3.31 12.22 3.31C12.66 4.41 12.38 5.23 12.3 5.43C12.81 5.99 13.12 6.7 13.12 7.58C13.12 10.65 11.25 11.33 9.47 11.53C9.76 11.78 10.01 12.26 10.01 13.01C10.01 14.08 10 14.94 10 15.21C10 15.42 10.15 15.67 10.55 15.59C13.71 14.53 16 11.53 16 8C16 3.58 12.42 0 8 0Z"
                            transform="scale(64)"
                            fill="#ffff"></path>
                    </svg>

                    <a
                        target="_blank"
                        class="link"
                        href={site.github_url}
                        aria-label={`GitHub profile: ${site.github_profile}`}
                    >
                        {site.github_profile}
                    </a>
                </li>
            </ul>
        </div>
        <!-- End About -->

        <!-- Projects -->
        <div class="mt-10 sm:mt-14" aria-labelledby="projects">
            <h2 id="projects" class="mb-5 font-bold text-neutral-200">
                Projects
            </h2>
            <div class="grid sm:grid-cols-2 gap-6">
                {
                    projects.map((project) => (
                        <div class="group flex flex-col h-full border shadow-2xs rounded-xl bg-neutral-900 border-neutral-700 shadow-neutral-700/70">
                            <Image
                                width={400}
                                height={200}
                                class="h-36 flex flex-col justify-center items-center rounded-t-xl"
                                src={project.poster_image}
                                alt={`Project: ${project.title}`}
                                loading="eager"
                            />
                            <div class="px-4 py-2">
                                <h3 class="text-sm md:text-base font-semibold text-neutral-200">
                                    {project.title}
                                </h3>
                                <p class="mt-2 text-xs md:text-sm text-neutral-500">
                                    {project.summary}
                                </p>
                            </div>
                            <div class="mt-auto flex border-t  divide-x  border-neutral-700 divide-neutral-700">
                                <a
                                    href={project.live_url}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    aria-label={`View live demo of ${project.title}`}
                                    class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-es-xl shadow-2xs  focus:outline-hidden  disabled:opacity-50 disabled:pointer-events-none bg-neutral-900 border-neutral-700 text-white hover:bg-neutral-800 focus:bg-neutral-800"
                                    href={project.live_url}
                                >
                                    Demo
                                </a>
                                <a
                                    href={project.github_url}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    aria-label={`View repository of ${project.title} on GitHub`}
                                    class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-ee-xl shadow-2xs  focus:outline-hidden  disabled:opacity-50 disabled:pointer-events-none bg-neutral-900 border-neutral-700 text-white hover:bg-neutral-800 focus:bg-neutral-800"
                                    href={project.github_url}
                                >
                                    Githib
                                </a>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
        <!--End Projects -->

        <!-- Skills -->
        <div class="my-10 sm:my-14" aria-labelledby="skills">
            <h2 id="skills" class="mb-5 font-bold text-neutral-200">Skills</h2>
            <ul class="flex flex-row flex-wrap items-start gap-1.5">
                {
                    skills.map((skill) => (
                        <div>
                            <span class="py-2 px-3 inline-flex items-center gap-x-1 text-sm  rounded-md bg-neutral-500/20 text-neutral-300">
                                <Image
                                    src={skill.icon_url}
                                    alt={`${skill.title} icon`}
                                    width={24}
                                    height={24}
                                    class="shrink-0 size-4"
                                    aria-hidden="true"
                                />
                                {skill.title}
                            </span>
                        </div>
                    ))
                }
            </ul>
        </div>
        <!-- End Skills -->

        <!-- Work Experience -->
        <div class="mt-10 sm:mt-14" aria-labelledby="work-experience">
            <h2 id="work-experience" class="mb-5 font-bold text-neutral-200">
                Work experience
            </h2>
            <div class="group relative flex gap-x-5">
                <div
                    class="relative group-last:after:hidden after:absolute after:top-8 after:bottom-2 after:start-3 after:w-px after:-translate-x-[0.5px] after:bg-neutral-700"
                >
                    <div
                        class="relative z-10 hight-6 w-full flex justify-center items-center"
                    >
                        <Image
                            src="https://sdhwfcnr1k.ufs.sh/f/aOW1BUeuSRYLcvM0YO8Fvs7qd9uVfpWPjmJY3HoLEi4Mtc62"
                            alt="Cloudkaptan logo"
                            width={24}
                            height={24}
                            class="shrink-0 h-4 w-full"
                            aria-hidden="true"
                        />
                    </div>
                </div>
                <div class="grow pb-8 group-last:pb-0">
                    <h3 class="mb-1 text-xs text-neutral-400">
                        2024 – Present
                    </h3>
                    <p class="font-semibold text-sm text-neutral-200">
                        Software Engineer at CloudKaptan
                    </p>
                    <p class="mt-1 text-sm text-neutral-400">
                        Working at the intersection of AI, Data, and Cloud to
                        build scalable solutions and elevate customer
                        experience.
                    </p>
                    <ul class="list-disc ms-6 mt-3 space-y-1.5">
                        <li class="ps-1 text-sm text-neutral-400">
                            Building and scaling solutions with Salesforce and
                            Apex.
                        </li>
                        <li class="ps-1 text-sm text-neutral-400">
                            Supporting users and keeping things clear with
                            helpful documentation.
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- End Work Experience -->

        <!-- Education -->
        <div class="mt-10 sm:mt-14" aria-labelledby="education">
            <h2 id="education" class="mb-3 font-bold text-neutral-200">
                Education
            </h2>
            <ul class="flex flex-col space-y-4">
                {
                    studies.map((entry) => (
                        <li>
                            <div class="text-sm opacity-80 text-neutral-200">
                                {dateRange(entry.start, entry.end)}
                            </div>
                            <div class="text-white">{entry.school}</div>
                            <div class="pt-1 text-sm opacity-80 text-neutral-200">
                                {entry.degree}
                            </div>
                        </li>
                    ))
                }
            </ul>
        </div>
        <!-- End Education -->

        <!-- Let's Connect -->
        <div class="mt-10 sm:mt-14" aria-labelledby="lets-connect">
            <h2 id="lets-connect" class="mb-3 font-bold text-neutral-200">
                Let’s Connect
            </h2>
            <p class="text-sm text-neutral-200 pb-3">
                If you want to get in touch with me about something or just to
                say hi, reach out on social media or send me an email.
            </p>
            <ul class="flex flex-wrap gap-2 text-sm">
                {
                    socials.map((social) => (
                        <li class="flex gap-x-2 text-nowrap">
                            <a
                                href={social.url}
                                target="_blank"
                                class="link"
                                aria-label={`${site.name} on ${social.name}`}
                            >
                                {social.name}
                            </a>
                            <span class="text-white pt-1">/</span>
                        </li>
                    ))
                }
                <li class="flex gap-x-2 text-nowrap">
                    <a
                        href={`mailto:${site.email}`}
                        target="_blank"
                        class="link"
                        aria-label={`Email ${site.name}`}
                    >
                        {site.email}
                    </a>
                </li>
            </ul>
        </div>
        <!-- End Let's Connect -->
    </section>
</Layout>
